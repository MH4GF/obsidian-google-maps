{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "extends": ["./node_modules/@mh4gf/configs/biome/index.jsonc"],
  "linter": {
    "rules": {
      "correctness": {
        "useImportExtensions": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["export"]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "*.config.*",
        "**/__tests__/**",
        "version-bump.mjs",
        "src/main.ts",
        "**/types.ts",
        "**/constants.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ]
}
